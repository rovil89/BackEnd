<h2>Chat Pacifico!</h2>
<div>
    <input id="chat-input" />
</div>
<div>
    <p id="messages-panel"></p>
</div>

<div>
    <h2>Productos</h2>

    <ul>
        {{#each products}}
        <li>
            <p><b>{{title}}</b></p>
            <p>Precio: ${{price}}</p>
            <p>Descripción: {{description}}</p>
